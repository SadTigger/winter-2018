<nav class="navbar navbar-expand-md text-light bg-dark navbar-fixed-tops">
  <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <span class="navbar-text">New here?</span>
      </li>
      <li class="nav-item">
        <%= link_to 'Register', new_user_registration_path, class: "nav-link" %>
      </li>
    </ul>
  </div>
</nav>

<%= bootstrap_devise_error_messages! %>

<div class="form-signin">
  <%= form_for("user", :url => user_session_path ) do |f| %>
    <!-- Custom styles for this template -->
    <%= stylesheet_link_tag 'signin' %>
    <% body_class "text-center" %>
    <%= image_tag "/assets/fruits.svg", style: "width:50%;heigth:50%;"%>
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

    <%= f.label :email, class: "sr-only" %>
    <%= f.email_field :email, autofocus: true, placeholder: 'Email Address', class: "form-control" %>

    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: "form-control" %>

    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>

    <%= f.submit "Sign in", class: 'btn btn-lg btn-primary btn-block' %>

    <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
  <% end %>
</div>
